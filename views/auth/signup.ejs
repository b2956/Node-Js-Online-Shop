<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">

</head>
<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(errorMessage) { %>
            <div class="user-message user-message__error">
                <%= errorMessage %>
            </div>
        <% } %>
        
        <form action="/signup" method="post" class="login-form">
            <div class="form-control">
                <label for="email" class="login-form__label">Email</label>
                <input type="email" name="email" class="login-form__input" id="email">
            </div>
            
            <div class="form-control">
                <label for="password" class="login-form__label">Password</label>
                <input type="password" name="password" class="login-form__input" id="password">
            </div>

            <div class="form-control">
                <label for="confirmedPassword" class="login-form__label">Confirm Password</label>
                <input type="password" name="confirmedPassword" class="login-form__input" id="confirmedPassword">
            </div>
            
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="btn">Signup</button>
        </form>
    </main>
</body>


</html>