<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">

</head>

<body>
    
    <%- include('../includes/navigation.ejs') %>

    <main>

        <form class="login-form" action="/set-new-password/<%= token %>" method="post">

            <div class="form-control">
                <label for="password" class="login-form__label">Password</label>
                <input type="password" name="password" class="login-form__input" id="password">
            </div>

            <div class="form-control">
                <label for="confirmedPassword" class="login-form__label">Confirm Password</label>
                <input type="password" name="confirmedPassword" class="login-form__input" id="confirmedPassword">
            </div>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="hidden" name="token" value="<%= token %>">
            <input type="hidden" name="userId" value="<%= userId %>">

            <button type="submit" class="btn">Reset Password</button>
        </form>
    
        <%- include('../includes/end.ejs') %>