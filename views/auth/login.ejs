<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">

</head>
<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(errorMessage) { %>
            <div class="user-message user-message__error">
                <%= errorMessage %>
            </div>
        <% } %>

        <form action="/login" method="post" class="login-form" novalidate>
            <div class="form-control">
                <label for="email" class="login-form__label">Email</label>
                <input 
                class="<%= validationErrors.find(error => error.param === 'email') ? 'invalid' : '' %>"
                type="email" 
                name="email" 
                class="login-form__input" 
                id="email" 
                value="<%= oldInput.email %>" >
            </div>
            
            <div class="form-control">
                <label for="password" class="login-form__label">Password</label>
                <input 
                class="<%= validationErrors.find(error => error.param === 'password') ? 'invalid' : '' %>"
                type="password" 
                name="password" 
                class="login-form__input" 
                id="password" 
                value="<%= oldInput.password %>" >
            </div>
            
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="btn">Login</button>
        </form>

        <div class="centered">
            <a href="/reset-password">Reset Password</a>
        </div>
        
    </main>

    <%- include('../includes/end.ejs') %>